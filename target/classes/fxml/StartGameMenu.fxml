<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.controllers.StartGameMenuController"
            prefHeight="400.0" prefWidth="600.0" fx:id="borderPane">

    <top>
        <VBox prefWidth="1500" prefHeight="50" alignment="CENTER" styleClass="title" spacing="100">
            <Label text="Game Menu" textAlignment="CENTER"/>
            <Label styleClass="errorLabel" prefWidth="400" fx:id="usernameError"/>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" fx:id="hBox" spacing="20">
            <VBox alignment="CENTER_LEFT">
                <ChoiceBox prefWidth="250" prefHeight="40" fx:id="startGameChoiceBox" value="number of players" onAction="#usernameTextFields">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="2"/>
                            <String fx:value="3"/>
                            <String fx:value="4"/>
                            <String fx:value="5"/>
                            <String fx:value="6"/>
                            <String fx:value="7"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </VBox>
            <Button text="submit" onMouseClicked="#submit" fx:id="submit" visible="false"/>
        </HBox>
    </center>

    <stylesheets>
        <URL value="@../css/MenuStyle.css"/>
    </stylesheets>
</BorderPane>
