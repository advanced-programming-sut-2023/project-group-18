<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.controllers.LoginMenuController"
            prefHeight="750" prefWidth="1500">

    <top>
        <VBox prefWidth="1500" prefHeight="50" alignment="CENTER" styleClass="title">
            <Label text="Login Menu" textAlignment="CENTER"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox spacing="40" alignment="CENTER">
                <Label text="Username" prefWidth="200"/>
                <TextField promptText="Username" prefWidth="400"/>
                <Label text="Error" styleClass="errorLabel" prefWidth="200"/>
            </HBox>

            <HBox spacing="40" alignment="CENTER">
                <Label text="Password" prefWidth="200"/>
                <PasswordField promptText="Password" prefWidth="400"/>
                <Label text="Error" styleClass="errorLabel" prefWidth="200"/>
            </HBox>
        </VBox>
    </center>


    <bottom>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets right="20" bottom="20"/>
            </padding>
            <Button prefWidth="200" prefHeight="50" text="Back" onMouseClicked="#back"/>
        </VBox>
    </bottom>


    <stylesheets>
        <URL value="@../css/MenuStyle.css"/>
    </stylesheets>
</BorderPane>
