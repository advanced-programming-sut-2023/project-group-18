<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.controllers.FriendMenuController"
            prefHeight="800.0" prefWidth="1200.0"
            fx:id="borderPane">
    <!--      minHeight="700" maxHeight="700"-->
    <!--      minWidth="1300" maxWidth="1300"-->
    <top>
        <VBox fx:id="searchVBox" alignment="CENTER" spacing="20">
            <Label text="Friend Menu" textAlignment="CENTER" prefWidth="1500" prefHeight="50" alignment="CENTER" styleClass="title"/>
            <Button text="back" onMouseClicked="#back"/>
            <HBox alignment="CENTER" spacing="20">
                <TextField promptText="type..." fx:id="userName" prefWidth="300" prefHeight="60"/>
                <Button text="Search" onMouseClicked="#searchUser"/>
            </HBox>
        </VBox>
    </top>

    <bottom>
        <VBox fx:id="friendRequests" alignment="CENTER">
            <Button text="Show Requests" onMouseClicked="#showRequests"/>
        </VBox>
    </bottom>

    <stylesheets>
        <URL value="@../css/MenuStyle.css"/>
    </stylesheets>
</BorderPane>