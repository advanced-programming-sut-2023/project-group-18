<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.controllers.MainMenuController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <VBox prefWidth="1500" prefHeight="50" alignment="CENTER" styleClass="title">
            <Label text="Main Menu" textAlignment="CENTER"/>
        </VBox>
    </top>

    <left>
        <VBox spacing="15">
            <Button text="Profile Menu" onMouseClicked="#profileMenu"/>
            <Button text="logout" onMouseClicked="#logout"/>
            <Button text="chat" onMouseClicked="#chatSelectMenu"/>
            <Button text="friend" onMouseClicked="#friendMenu"/>
        </VBox>
    </left>
    <center>
        <Button text="START GAME" onMouseClicked="#startGame"/>
    </center>

    <stylesheets>
        <URL value="@../css/MenuStyle.css"/>
    </stylesheets>
</BorderPane>
