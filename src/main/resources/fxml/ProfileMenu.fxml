<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.view.controllers.ProfileMenuController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <VBox prefWidth="1500" prefHeight="50" alignment="CENTER" styleClass="title">
            <Label text="Profile Menu" textAlignment="CENTER"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <HBox>
                <Label text="change password" prefWidth="200"/>
                <PasswordField promptText="old password" fx:id="oldPassword" prefWidth="150"/>
                <PasswordField promptText="new password" fx:id="newPassword" prefWidth="150"/>
                <Button text="change" onMouseClicked="#changePassword"/>
                <Label styleClass="errorLabel" prefWidth="400" fx:id="passwordError"/>
            </HBox>
            <HBox>
                <Label text="change slogan" prefWidth="200"/>
                <TextField promptText="new slogan" fx:id="newSlogan" prefWidth="150"/>
                <Button text="change" onMouseClicked="#changeSlogan"/>
                <Label styleClass="errorLabel" prefWidth="400" fx:id="sloganError"/>
            </HBox>
            <Button text="remove slogan" onMouseClicked="#removeSlogan"/>
            <Button text="choose avatar" onMouseClicked="#chooseAvatar"/>
            <Button text="scoreboard" onMouseClicked="#scoreboard"/>
        </VBox>
    </center>

    <left>
        <VBox>
            <HBox>
                <Label text="Username" prefWidth="150"/>
                <Label fx:id="username" prefWidth="200"/>
            </HBox>
            <HBox>
                <Label text="Nickname" prefWidth="150"/>
                <Label fx:id="nickname" prefWidth="200"/>
            </HBox>
            <HBox>
                <Label text="email" prefWidth="150"/>
                <Label fx:id="email" prefWidth="200"/>
            </HBox>
            <HBox>
                <Label text="avatar" prefWidth="150"/>
                <ImageView fx:id="avatar" fitWidth="100" fitHeight="100"/>
            </HBox>
        </VBox>
    </left>


    <stylesheets>
        <URL value="@../css/MenuStyle.css"/>
    </stylesheets>

</BorderPane>
